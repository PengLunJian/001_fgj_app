<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import store from '../../store';
  import apis from '../../apis';
  import * as $routes from '../../router';
  import * as $config from '../../config';

  wepy.component({
    store,
    data: {
      noData: '暂无数据',
      fileUrl: apis.fileUrl,
      url: $config.DEFAULT_HOUSE
    },
    props: {
      item: {
        type: Object,
        default: {}
      },
      isType: {
        type: Boolean,
        default: false
      }
    },
    computed: {
      getState() {
        let clazz = '';
        const {type, state} = this.item;
        if (type) {
          const states = [
            ['在售', '待售', '售罄'],
            ['未售', '', '已售'],
            ['未租', '', '已租']
          ];
          states[type - 1].map((item, index) => {
            if (item === state) {
              clazz = ' state' + (index + 1);
            }
          });
        }
        return clazz;
      },
      getTags() {
        const {tags} = this.item;
        return tags ? tags.split(' ') : '';
      }
    },
    methods: {
      onHandleDetail() {
        const {id, type} = this.item;
        const urls = [
          $routes.NEW_HOUSE_DETAIL.path,
          $routes.SECOND_HOUSE_DETAIL.path,
          $routes.RENT_HOUSE_DETAIL.path
        ];
        const url = urls[type - 1] + '?id=' + id;
        wx.navigateTo({
          url
        });
      }
    },
    created() {
    }
  });
</script>

