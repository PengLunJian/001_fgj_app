<template>
  <div class="top-bar" :style="{'paddingTop':statusHeight}">
    <div class="top-inner">
      <div class="top-icon iconfont icon-back" @tap="onHandleBack"></div>
      <div class="top-icon iconfont icon-home" @tap="onHandleHome"></div>
      <div class="top-title">{{title}}</div>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import * as $routes from '../../router';

  wepy.component({
    data: {
      statusHeight: ''
    },
    props: {
      title: {
        type: String,
        default: '标题'
      }
    },
    events: {},
    methods: {
      onHandleBack() {
        wx.navigateBack({
          delta: 1
        });
      },
      onHandleHome() {
        wx.reLaunch({
          url: $routes.INDEX.path
        });
      }
    },
    created() {
      const system = wx.getSystemInfoSync();
      const statusHeight = system.statusBarHeight;
      this.statusHeight = statusHeight + 'px';
    }
  });
</script>

