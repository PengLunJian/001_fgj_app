  <div class="top-bar" style="{{styl}}">
    <div class="top-inner">
      <div class="top-icon iconfont icon-back" @tap="onHandleBack"></div>
      <div class="top-icon iconfont icon-home" @tap="onHandleHome"></div>
      <div class="top-title">{{title}}</div>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import * as $routes from '../../router';

  wepy.component({
    data: {},
    props: {
      title: {
        type: String,
        default: '标题'
      },
      styl: {
        type: String,
        default: ''
      }
    },
    events: {},
    methods: {
      onHandleBack() {
        wx.navigateBack({
          delta: 1
        });
      },
      onHandleHome() {
        wx.reLaunch({
          url: $routes.INDEX.path
        });
      }
    },
    onLoad() {
    }
  });
</script>

