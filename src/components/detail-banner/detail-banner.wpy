<template>
  <div class="module">
    <div class="module-content">
      <div class="module-body">
        <div class="module-context">
          <div class="module-banner">
            <div class="banner-swiper">
              <swiper class="swiper"
                      autoplay="{{autoplay}}"
                      circular="{{circular}}"
                      @change="onHandleSwiperChange">
                <swiper-item v-for="(item,index) in isData.picUrl" :key="index"
                             @tap="onHandleLargeImage(index)">
                  <lazy-image class="swiper-img" width="30%" src="{{item}}" mode="aspectFill"/>
                </swiper-item>
              </swiper>
            </div>
            <div class="banner-code">
              <span class="banner-label">{{current}}/{{isData.picUrl.length}}</span>
            </div>
            <div class="banner-btns">
              <button class="btn-favorite" @tap="onHandleFollow">
                <span class="btn-icon iconfont icon-favorite{{isData.isFollow?' active':''}}"></span>
                <span class="btn-text">收藏</span>
              </button>
              <button class="btn-forward" open-type="share">
                <span class="btn-icon iconfont icon-forward"></span>
                <span class="btn-text">分享</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import store from '../../store';
  import Toast from '../../mixins/toast';
  import Storage from '../../mixins/storage';
  import {mapActions, mapState} from '@wepy/redux';
  import * as controller from './controller';
  import * as $routes from '../../router';

  wepy.component({
    store,
    mixins: [Toast, Storage],
    data: {
      current: 1,
      circular: true,
      autoplay: false
    },
    props: {
      isData: {
        type: Object,
        default: {}
      }
    },
    computed: {
      ...mapState(controller.STATES)
    },
    methods: {
      ...mapActions(controller.ACTIONS),
      onHandleLargeImage(index) {
        const {picUrl} = this.isData;
        wx.previewImage({
          current: picUrl[index],
          urls: picUrl
        });
      },
      onHandleSwiperChange(e) {
        const current = e.$wx.detail.current;
        this.current = current + 1;
      },
      exeAjaxUpdateUnfollow() {
        const params = this.getParams();
        this.ajaxUpdateUnfollow(params)
          .then((res) => {
            const {success} = res.payload;
            if (success) {
              this.showToast('取消收藏成功');
            } else {
              this.showToast('取消收藏失败');
            }
            console.log(res);
          })
          .catch((err) => {
            this.showToast('取消收藏失败');
            console.log(err);
          });
      },
      exeAjaxUpdateFollow() {
        const params = this.getParams();
        this.ajaxUpdateFollow(params)
          .then((res) => {
            const {success} = res.payload;
            if (success) {
              this.showToast('收藏成功');
            } else {
              this.showToast('收藏失败');
            }
            console.log(res);
          })
          .catch((err) => {
            this.showToast('收藏失败');
            console.log(err);
          });
      },
      onHandleFollow() {
        const {phone} = this.getItem('user');
        if (phone) {
          this.exeAjaxUpdateFollow();
        } else {
          wx.navigateTo({
            url: $routes.LOGIN.path
          });
        }
      },
      getParams() {
        const houseId = this.isData.id;
        const {phone} = this.getItem('user');
        const params = {
          houseId,
          phone
        };
        return params;
      }
    },
    created() {
    }
  });
</script>

