<template>
  <div class="container">
    <div class="content">
      <div class="header">
        <top-bar title="关于我们"/>
      </div>
      <div class="body">
        <div class="context fade">
          <scroll-view
            class="scroll-view"
            scroll-y="{{isScroll}}">
            <div class="scroll-content">
              <div class="module">
                <div class="module-content">
                  <div class="module-body">
                    <div class="module-row row">
                      <div class="module-col col-12">
                        <div class="module-image">
                          <lazy-image src="{{url}}" width="30%"/>
                        </div>
                      </div>
                      <div class="module-col col-12">
                        <div class="module-items">
                          <button class="module-item btn" hover-class="none" @tap="onHandlePhone">
                            <div class="item-icon iconfont icon-phone"></div>
                            <div class="item-text">联系电话</div>
                            <div class="item-next iconfont icon-next"></div>
                          </button>
                          <button class="module-item btn" hover-class="none" open-type="contact">
                            <div class="item-icon iconfont icon-msg"></div>
                            <div class="item-text">在线客服</div>
                            <div class="item-next iconfont icon-next"></div>
                          </button>
                          <button class="module-item btn" hover-class="none" @tap="onHandleLocation">
                            <div class="item-icon iconfont icon-address"></div>
                            <div class="item-text">地址导航</div>
                            <div class="item-next iconfont icon-next"></div>
                          </button>
                          <button class="module-item btn" hover-class="none" @tap="onHandleShowShare">
                            <div class="item-icon iconfont icon-share"></div>
                            <div class="item-text">我要分享</div>
                            <div class="item-next iconfont icon-next"></div>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </scroll-view>
        </div>
      </div>
      <div class="footer">
        <div class="version">Version{{getVersion}}</div>
      </div>
      <share :isShow="isShow" :isHide="isHide"/>
      <modal :isEnter="isEnter"
             :isLeave="isLeave"
             title="系统发现新版本"
             context="系统更新即可体验更多服务"
             cancelText="下次再说"
             confirmText="立即更新"
             @onConfirm="onHandleConfirm"/>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import store from '../../../store';
  import QQMapWX from 'wx-qqmap-jssdk';
  import Toast from '../../../mixins/toast';
  import * as $config from '../../../config';

  wepy.page({
    store,

    mixins: [Toast],

    data: {
      isShow: false,
      isHide: false,
      isEnter: false,
      isLeave: false,
      isScroll: true,
      hasUpdate: false,
      updateManager: null,
      url: $config.DEFAULT_ABOUT,
      company: {
        latitude: 0,
        longitude: 0,
        name: '广德市码上找房',
        phoneNumber: '13731887133',
        address: '安徽省宣城市广德市桃州镇金鑫世贸广场北区商业B5楼505、506号'
      }
    },

    computed: {
      getVersion() {
        const {globalData} = this.$app.$options;
        const {version} = globalData;
        return version;
      }
    },

    methods: {
      onHandlePhone() {
        const {phoneNumber} = this.company;
        wx.makePhoneCall({
          phoneNumber,
          success: (res) => {
            console.log(res);
          },
          fail: (err) => {
            console.log(err);
          },
          complete: (res) => {
            console.log(res);
          }
        });
      },
      onHandlePosition() {
        const {address} = this.company;
        const qqmapsdk = new QQMapWX({
          key: $config.DEFAULT_MAPKEY
        });
        qqmapsdk.geocoder({
          address,
          success: (res) => {
            if (res) {
              const {result} = res || {};
              const {location} = result || {};
              const {lat, lng} = location || {};
              this.company.longitude = lng;
              this.company.latitude = lat;
            }
          },
          complete: (res) => {
            console.log(res);
          }
        });
      },
      onHandleLocation() {
        const {latitude, longitude, name, address} = this.company;
        wx.openLocation({
          name,
          address,
          latitude,
          longitude,
          success: (res) => {
            console.log(res);
          },
          fail: (err) => {
            console.log(err);
          },
          complete: (res) => {
            console.log(res);
          }
        });
      },
      onHandleShowShare() {
        this.isShow = true;
        this.isHide = false;
        this.isScroll = false;
      },
      onHandleShowModal() {
        this.isEnter = true;
        this.isLeave = false;
        this.isScroll = false;
      },
      onHandleCheckVersion() {
        const updateManager = wx.getUpdateManager();
        this.updateManager = updateManager;
        updateManager.onCheckForUpdate((res) => {
          res = res || {};
          const {hasUpdate} = res;
          this.hasUpdate = hasUpdate;
          if (hasUpdate) {
            setTimeout(() => {
              this.onHandleShowModal();
            }, 1000);
          }
        });
      },
      onHandleConfirm() {
        const {hasUpdate, updateManager} = this;
        if (hasUpdate) {
          updateManager.onUpdateReady(() => {
            updateManager.applyUpdate();
          });
          updateManager.onUpdateFailed(() => {
            this.showToast('请您删除小程序，重新搜索打开');
          });
        }
      }
    },

    onLoad() {
      this.onHandlePosition();
      this.onHandleCheckVersion();
    }
  });
</script>

