<template>
  <div class="container">
    <div class="content">
      <div class="header">
        <top-bar title="房源详情"></top-bar>
      </div>
      <div class="body">
        <loading :isLoading="isLoading"></loading>
        <error :isFailure="isFailure" @refresh="onRefresh"></error>
        <div class="context fade" v-if="isSuccess&&isData">
          <scroll-view
            class="scroll-view"
            scroll-y="{{true}}">
            <div class="scroll-inner">
              <detail-banner :isData="isData"></detail-banner>
              <detail-base :isData="isData"></detail-base>
              <detail-agent :items="isData.agency"></detail-agent>
              <detail-config :items="isData.configs"></detail-config>
              <detail-map :name="isData.xiaoqu"
                          :longitude="longitude"
                          :latitude="latitude"></detail-map>
            </div>
          </scroll-view>
          <detail-footer :item="isData"></detail-footer>
        </div>
      </div>
      <div class="footer"></div>
    </div>
  </div>
</template>

<script type="text/ecmascript-6">
  import wepy from '@wepy/core';
  import store from '../../../store';
  import {mapState, mapActions} from '@wepy/redux';
  import * as controller from './controller';
  import QQMapWX from 'wx-qqmap-jssdk';

  wepy.page({
    store,

    data: {
      longitude: 0,
      latitude: 0
    },

    computed: {
      ...mapState(controller.STATES)
    },

    methods: {
      ...mapActions(controller.ACTIONS),
      onRefresh() {
        this.exeAjaxSelectDetail();
      },
      onHandleInitQQMap() {
        const {addr_sheng, addr_shi, addr_qu, addr, xiaoqu} = this.isData;
        const address = addr_sheng + addr_shi + addr_qu + xiaoqu + addr;
        const qqmapsdk = new QQMapWX({
          key: 'CQABZ-RINL4-5MAU4-DBWDV-D2UXZ-5GBEU'
        });
        qqmapsdk.geocoder({
          address: address,
          success: (res) => {
            this.onHandleLocation(res);
          },
          complete: (res) => {
            console.log(res);
          }
        });
      },
      onHandleLocation(res) {
        if (res) {
          const {result} = res || {};
          const {location} = result || {};
          const {lat, lng} = location || {};
          this.longitude = lng;
          this.latitude = lat;
          console.log('东经=' + lng + '|北纬=' + lat);
        }
      },
      exeAjaxSelectDetail() {
        const {house_id} = this.$wx.options;
        this.ajaxSelectDetail({house_id})
          .then((res) => {
            this.onHandleInitQQMap();
            console.log(res);
          })
          .catch((err) => {
            console.log(err);
          });
      }
    },

    onLoad() {
      this.exeAjaxSelectDetail();
    }
  });
</script>

