
<view class="module">
  <view class="module-content">
    <view class="module-body">
      <view class="module-context">
        <view class="module-base">
          <view class="row">
            <view class="col-12">
              <view class="title ellipsis">{{item.title}}</view>
            </view>
          </view>
          <view class="row">
            <view class="col-4">
              <view class="value">{{item.total_price/10000}}万</view>
              <view class="label">总价</view>
            </view>
            <view class="col-4">
              <view class="value">{{item.huxing}}</view>
              <view class="label">户型</view>
            </view>
            <view class="col-4">
              <view class="value">{{item.mianji}}m²</view>
              <view class="label">面积</view>
            </view>
          </view>
          <view class="row">
            <view class="col-6">
              <label class="label">单价</label>
              <text class="value">{{item.price}}/元m²</text>
            </view>
            <view class="col-6">
              <label class="label">朝向</label>
              <text class="value">{{item.chaoxiang}}</text>
            </view>
            <view class="col-6">
              <label class="label">类型</label>
              <text class="value">{{item.leixing}}</text>
            </view>
            <view class="col-6">
              <label class="label">装修</label>
              <text class="value">{{item.zhaungxiu}}</text>
            </view>
            <view class="col-6">
              <label class="label">楼层</label>
              <text class="value">{{item.louceng}}</text>
            </view>
            <view class="col-6">
              <label class="label">年代</label>
              <text class="value">{{item.nianai}}</text>
            </view>
            <view class="col-6">
              <label class="label">小区</label>
              <text class="value">{{item.xiaoqu}}</text>
            </view>
            <view class="col-6">
              <label class="label">发布</label>
              <text class="value">{{item.release_time}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
