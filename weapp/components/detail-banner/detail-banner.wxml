
<view class="module">
  <view class="module-content">
    <view class="module-body">
      <view class="module-context">
        <view class="module-banner">
          <view class="banner-swiper">
            <swiper autoplay="{{autoplay}}" circular="{{circular}}" data-wpy-evt="110-25" bindchange="_proxy" class="swiper">
              <swiper-item wx:for="{{ items }}" wx:for-index="index" wx:for-item="item" wx:key="index" key="{{ index }}" data-wpy-evt="110-26" bindtap="_proxy" data-wpytap-a="{{ index }}">
                <lazy-image bind_init="_initComponent" src="{{item.url}}" lazyStyle="width:120px;height:60px;" class="swiper-img"></lazy-image>
              </swiper-item>
            </swiper>
          </view>
          <view class="banner-code">
            <label class="banner-label">{{current}}/{{items.length}}</label>
          </view>
          <view class="banner-btns">
            <button data-wpy-evt="110-27" bindtap="_proxy" class="btn-favorite">
              <label class="btn-icon iconfont icon-favorite{{isData.isFollow?' active':''}}"></label>
              <label class="btn-text">收藏</label>
            </button>
            <button open-type="share" class="btn-forward">
              <label class="btn-icon iconfont icon-forward"></label>
              <label class="btn-text">分享</label>
            </button>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
