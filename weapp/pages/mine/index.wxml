
<view class="container">
  <view class="content">
    <view class="header">
      <top-bar bind_init="_initComponent" title="个人中心"></top-bar>
    </view>
    <view class="body">
      <view class="user module">
        <view class="info">
          <image src="../../assets/images/agent.jpg" class="img"></image>
          <view class="name">WEB前端架构师</view>
        </view>
        <image src="../../assets/images/mine_bg.jpg" mode="aspectFit" class="bg"></image>
      </view>
      <view class="list module">
        <navigator wx:for="{{ items }}" wx:for-index="index" wx:for-item="item" wx:key="index" hover-class="none" key="{{ index }}" url="{{item.path}}" class="list-item btn">
          <view class="list-item-icon iconfont {{item.icon}}"></view>
          <view class="list-item-text">{{item.name}}</view>
          <view class="list-item-next iconfont icon-next"></view>
        </navigator>
      </view>
    </view>
  </view>
</view>
