.container .content {
  padding-top: 130rpx;
}
.container .content .body .company {
  padding: 30rpx;
}
.container .content .body .company .inner {
  overflow: hidden;
  position: relative;
  height: 360rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}
.container .content .body .company .inner .title {
  display: none;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  top: 40%;
  left: 0;
  z-index: 1;
  transform: translateY(-50%);
  font-size: 70rpx;
  font-weight: bold;
  letter-spacing: 4px;
  text-align: center;
  color: #ffffff;
}
.container .content .body .company .inner .btn-share {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  z-index: 1;
  font-size: 44rpx;
  text-align: center;
  color: #ffffff;
}
.container .content .body .company .inner .image {
  width: 100%;
  height: 100%;
}
.container .content .body .list {
  padding: 0 30rpx 30rpx;
}
.container .content .body .list .inner {
  overflow: hidden;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}
.container .content .body .list .inner .list-item {
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 110rpx;
  border-bottom: 0.5px solid #f0f0f0;
}
.container .content .body .list .inner .list-item .list-item-icon,
.container .content .body .list .inner .list-item .list-item-next {
  position: absolute;
  top: 0;
  width: 110rpx;
  height: 110rpx;
  text-align: center;
}
.container .content .body .list .inner .list-item .list-item-icon.list-item-icon,
.container .content .body .list .inner .list-item .list-item-next.list-item-icon {
  left: 0;
  font-size: 46rpx;
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
}
.container .content .body .list .inner .list-item .list-item-icon.list-item-next,
.container .content .body .list .inner .list-item .list-item-next.list-item-next {
  right: 0;
  color: #dedede;
}
.container .content .body .list .inner .list-item .list-item-text {
  height: 100%;
  font-size: 32rpx;
}
.container .content .body .list .inner .list-item:last-child {
  border: none;
}
.container .content .body .list .inner .list-item:nth-child(1) .list-item-icon {
  background-image: -webkit-linear-gradient(left, #00FF00, #12B347);
}
.container .content .body .list .inner .list-item:nth-child(2) .list-item-icon {
  background-image: -webkit-linear-gradient(left, #FFBC09, #FF4A0B);
}
.container .content .body .list .inner .list-item:nth-child(3) .list-item-icon {
  background-image: -webkit-linear-gradient(left, #060BFF, #17F2FF);
}
.container .content .footer {
  position: fixed;
  left: 0;
  bottom: 0;
}
.container .content .footer .company {
  padding-bottom: 50rpx;
  text-align: center;
  font-size: 0;
}
.container .content .footer .company .company-text {
  width: auto;
  height: 30rpx;
  line-height: 30rpx;
  display: inline-block;
  vertical-align: middle;
  padding-right: 20rpx;
  border-right: 0.5px solid #dedede;
  font-size: 26rpx;
  color: #CCCCCC;
}
.container .content .footer .company .company-logo {
  width: 115rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
}

