.container .content .body .user {
  height: 400rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}
.container .content .body .list {
  background-color: #ffffff;
}
.container .content .body .list .list-item {
  height: 110rpx;
  line-height: 110rpx;
  padding-left: 110rpx;
}
.container .content .body .list .list-item .list-icon,
.container .content .body .list .list-item .list-next {
  position: absolute;
  top: 0;
  width: 110rpx;
  height: 110rpx;
  text-align: center;
}
.container .content .body .list .list-item .list-icon.list-icon,
.container .content .body .list .list-item .list-next.list-icon {
  left: 0;
  font-size: 46rpx;
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
}
.container .content .body .list .list-item .list-icon.list-next,
.container .content .body .list .list-item .list-next.list-next {
  right: 0;
  color: #dedede;
}
.container .content .body .list .list-item .list-text {
  height: 100%;
  letter-spacing: 1px;
  font-size: 32rpx;
  border-bottom: 0.5px solid #dedede;
}
.container .content .body .list .list-item:last-child .list-text {
  border: none;
}
.container .content .body .list .list-item:nth-child(1) .list-icon {
  background-image: -webkit-linear-gradient(left, #FF2714, #FF841D);
}
.container .content .body .list .list-item:nth-child(2) .list-icon {
  background-image: -webkit-linear-gradient(left, #FFFF00, #FFB421);
}
.container .content .body .list .list-item:nth-child(3) .list-icon {
  background-image: -webkit-linear-gradient(left, #00FF00, #12B347);
}
.container .content .body .list .list-item:nth-child(4) .list-icon {
  background-image: -webkit-linear-gradient(left, #060BFF, #17F2FF);
}

