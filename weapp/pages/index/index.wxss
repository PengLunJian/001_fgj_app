.container .content {
  height: 100vh;
  padding-top: 130rpx;
}
.container .content .header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: #ffffff;
  padding: 48rpx 0 18rpx 0;
}
.container .content .header .inline {
  position: relative;
}
.container .content .header .inline .logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 64rpx;
  padding-left: 20rpx;
}
.container .content .header .inline .logo image {
  width: 100%;
  height: 100%;
}
.container .content .header .inline .search {
  height: 64rpx;
  overflow: hidden;
  text-align: center;
  font-size: 0;
}
.container .content .header .inline .search .btn-search {
  width: 300rpx;
  height: 64rpx;
  line-height: 64rpx;
  display: inline-block;
  overflow: hidden;
  border-radius: 64rpx;
  background-color: #f0f0f0;
  color: #999999;
}
.container .content .header .inline .search .btn-search .btn-icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 64rpx;
  height: 64rpx;
  font-size: 28rpx;
}
.container .content .header .inline .search .btn-search .btn-text {
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 64rpx;
  font-size: 24rpx;
  text-align: left;
}
.container .content .body .row {
  padding: 15rpx;
  padding-bottom: 0;
}
.container .content .body .row .col-12 {
  padding: 15rpx;
}
.container .content .body .row .col-12 .user {
  position: relative;
  height: 200rpx;
  line-height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  font-size: 0;
}
.container .content .body .row .col-12 .user .user-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.container .content .body .row .col-12 .user .user-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
}
.container .content .body .row .col-12 .user .user-box .user-img {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  vertical-align: middle;
  border: 1px solid #ffffff;
  background-color: #ffffff;
  border-radius: 100%;
}
.container .content .body .row .col-12 .user .user-box .user-name {
  display: inline-block;
  vertical-align: middle;
  padding-left: 20rpx;
  font-size: 32rpx;
  letter-spacing: 1px;
  color: #ffffff;
}

