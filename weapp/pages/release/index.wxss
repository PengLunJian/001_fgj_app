.container .content {
  height: 100vh;
  padding-top: 130rpx;
}
.container .content .body .mine .user {
  padding: 40rpx 50rpx;
  font-size: 0;
}
.container .content .body .mine .user .img {
  display: inline-block;
  vertical-align: middle;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}
.container .content .body .mine .user .name {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 1px;
  color: #333333;
}
.container .content .body .mine .opts {
  padding: 30rpx 0;
  text-align: center;
}
.container .content .body .mine .opts .opt .opt-icon {
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 10rpx;
  background: -webkit-linear-gradient(left, #FFE71D, #FF6309);
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  font-size: 56rpx;
}
.container .content .body .mine .opts .opt .opt-text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666666;
}
.container .content .body .list .list-item {
  height: 110rpx;
  line-height: 110rpx;
  padding-left: 110rpx;
}
.container .content .body .list .list-item .list-item-icon,
.container .content .body .list .list-item .list-item-next {
  position: absolute;
  top: 0;
  width: 110rpx;
  height: 110rpx;
  text-align: center;
}
.container .content .body .list .list-item .list-item-icon.list-item-icon,
.container .content .body .list .list-item .list-item-next.list-item-icon {
  left: 0;
  font-size: 44rpx;
  /*-webkit-text-fill-color: transparent;*/
  /*-webkit-background-clip: text;*/
}
.container .content .body .list .list-item .list-item-icon.list-item-next,
.container .content .body .list .list-item .list-item-next.list-item-next {
  right: 0;
  color: #dedede;
}
.container .content .body .list .list-item .list-item-text {
  height: 100%;
  letter-spacing: 1px;
  font-size: 32rpx;
  border-bottom: 0.5px solid #dedede;
}
.container .content .body .list .list-item:last-child .list-item-text {
  border: none;
}
