.container .content .footer {
  position: fixed;
  left: 0;
  bottom: 0;
}
.container .content .footer .company {
  padding-bottom: 50rpx;
  text-align: center;
  font-size: 0;
}
.container .content .footer .company .company-text {
  width: auto;
  height: 30rpx;
  line-height: 30rpx;
  display: inline-block;
  vertical-align: middle;
  padding-right: 20rpx;
  border-right: 0.5px solid #dedede;
  font-size: 24rpx;
  color: #CCCCCC;
}
.container .content .footer .company .company-logo {
  width: 115rpx;
  height: 30rpx;
  display: inline-block;
