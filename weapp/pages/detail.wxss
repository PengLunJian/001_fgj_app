.container .content {
  padding-top: 130rpx;
  padding-bottom: 110rpx;
}
.container .content .body .module {
  position: relative;
  background-color: #ffffff;
}
.container .content .body .module:first-child {
  margin: 0;
}
.container .content .body .module .banner .swiper {
  height: 480rpx;
}
.container .content .body .module .banner .swiper .swiper-img {
  width: 100%;
  height: 100%;
}
.container .content .body .module .banner .swiper-code {
  position: absolute;
  left: 0;
  bottom: 20rpx;
  text-align: center;
  font-size: 0;
}
.container .content .body .module .banner .swiper-code .swiper-text {
  height: 40rpx;
  line-height: 40rpx;
  min-width: 100rpx;
  display: inline-block;
  padding: 0 20rpx;
  border-radius: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
  color: #ffffff;
}
.container .content .body .module .banner .btn-favorite,
.container .content .body .module .banner .btn-share {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  line-height: 80rpx;
  position: absolute;
  bottom: -30rpx;
  z-index: 1;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
  text-align: center;
}
.container .content .body .module .banner .btn-favorite.btn-favorite,
.container .content .body .module .banner .btn-share.btn-favorite {
  right: 120rpx;
}
.container .content .body .module .banner .btn-favorite.btn-share,
.container .content .body .module .banner .btn-share.btn-share {
  right: 30rpx;
}
.container .content .body .module .banner .btn-favorite .iconfont,
.container .content .body .module .banner .btn-share .iconfont {
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  font-size: 40rpx;
}
.container .content .body .module .banner .btn-favorite .iconfont.icon-favorite-off,
.container .content .body .module .banner .btn-share .iconfont.icon-favorite-off {
  background-image: -webkit-linear-gradient(left, #FF2714, #FF841D);
}
.container .content .body .module .banner .btn-favorite .iconfont.icon-share,
.container .content .body .module .banner .btn-share .iconfont.icon-share {
  background-image: -webkit-linear-gradient(left, #00FF00, #12B347);
}
.container .content .body .module .product {
  padding: 30rpx 0;
}
.container .content .body .module .product .row {
  line-height: 40rpx;
}
.container .content .body .module .product .row .col-12 .product-title {
  line-height: 60rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}
.container .content .body .module .product .row .col-4 {
  padding-bottom: 20rpx;
  text-align: center;
}
.container .content .body .module .product .row .col-4 .value {
  margin-bottom: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #F40505;
}
.container .content .body .module .product .row .col-4 .label {
  font-size: 24rpx;
  color: #999999;
}
.container .content .body .module .product .row .col-6 {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.container .content .body .module .product .row .col-6 .label {
  margin-right: 20rpx;
  color: #999999;
}
.container .content .body .module .title {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 0.5px solid #f0f0f0;
  padding: 0 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.container .content .body .module .context {
  min-height: 400rpx;
}
.container .content .footer {
  display: flex;
  flex-wrap: wrap;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1000;
  background-color: #ffffff;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}
.container .content .footer .pull-left {
  width: 36%;
}
.container .content .footer .pull-left .agent {
  padding-left: 30rpx;
  text-align: left;
  font-size: 0;
}
.container .content .footer .pull-left .agent .agent-img {
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
  vertical-align: middle;
  border-radius: 100%;
  background-color: #cccccc;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}
.container .content .footer .pull-left .agent .agent-name {
  width: auto;
  height: 110rpx;
  line-height: 110rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333333;
}
.container .content .footer .pull-right {
  width: 64%;
  font-size: 0;
}
.container .content .footer .pull-right .btn {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #ffffff;
}
.container .content .footer .pull-right .btn.btn-msg {
  background-color: #FF8C00;
}
.container .content .footer .pull-right .btn.btn-tel {
  background-color: #009966;
}
.container .content .footer .pull-right .btn .btn-icon {
  display: inline-block;
  vertical-align: middle;
  height: 110rpx;
  line-height: 110rpx;
  margin-right: 10rpx;
  font-size: 36rpx;
}
.container .content .footer .pull-right .btn .btn-text {
  display: inline-block;
  vertical-align: middle;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 36rpx;
  letter-spacing: 1px;
}

