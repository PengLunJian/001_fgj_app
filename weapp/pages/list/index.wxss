.container {
  min-height: 100vh;
}
.container .content {
  height: 100vh;
}
.container .content .body {
  height: 100%;
  position: relative;
}
.container .content .body .context {
  height: 100%;
  padding-top: 65px;
}
.container .content .body .context .date {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999999;
}
.container .content .body .context .date .label {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  background-color: #f7f7f7;
}
.container .content .body .context .date .label.fixed {
  position: fixed;
  top: 130rpx;
  left: 0;
  z-index: 1000;
}
.container .content .body .context .item {
  position: relative;
  overflow: hidden;
  padding: 30rpx;
  background-color: #ffffff;
}
.container .content .body .context .item .item-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 280rpx;
  height: 240rpx;
  padding: 30rpx;
}
.container .content .body .context .item .item-img image {
  width: 100%;
  height: 100%;
}
.container .content .body .context .item .item-info {
  padding-left: 240rpx;
}
.container .content .body .context .item .item-info .item-row {
  margin-bottom: 8rpx;
  font-size: 0;
}
.container .content .body .context .item .item-info .item-row:last-child {
  margin: 0;
  padding-top: 4rpx;
}
.container .content .body .context .item .item-info .item-row .item-title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.container .content .body .context .item .item-info .item-row .item-addr,
.container .content .body .context .item .item-info .item-row .item-split,
.container .content .body .context .item .item-info .item-row .item-size {
  height: 32rpx;
  line-height: 32rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 24rpx;
  color: #666666;
}
.container .content .body .context .item .item-info .item-row .item-addr.item-split,
.container .content .body .context .item .item-info .item-row .item-split.item-split,
.container .content .body .context .item .item-info .item-row .item-size.item-split {
  padding: 6rpx 10rpx;
}
.container .content .body .context .item .item-info .item-row .item-addr.item-split:before,
.container .content .body .context .item .item-info .item-row .item-split.item-split:before,
.container .content .body .context .item .item-info .item-row .item-size.item-split:before {
  content: '';
  display: block;
  width: 0;
  height: 100%;
  border-left: 1px solid #DEDEDE;
}
.container .content .body .context .item .item-info .item-row .item-value,
.container .content .body .context .item .item-info .item-row .item-unit {
  height: 100%;
  display: inline-block;
  vertical-align: middle;
}
.container .content .body .context .item .item-info .item-row .item-value.item-value,
.container .content .body .context .item .item-info .item-row .item-unit.item-value {
  font-size: 32rpx;
  font-weight: bold;
}
.container .content .body .context .item .item-info .item-row .item-value.item-unit,
.container .content .body .context .item .item-info .item-row .item-unit.item-unit {
  font-size: 24rpx;
}
.container .content .body .context .item .item-info .item-row .item-normal {
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #999999;
}
.container .content .body .context .item .item-info .item-row .item-normal.item-price {
  color: #F40505;
  font-size: 0;
}
.container .content .body .context .item .item-info .item-row .item-normal:last-child {
  margin: 0;
}
.container .content .body .context .item .item-info .item-row .item-tag {
  height: 40rpx;
  line-height: 36rpx;
  display: inline-block;
  vertical-align: middle;
  padding: 0 10rpx;
  margin-right: 10rpx;
  border: 1px solid #FF9900;
  font-size: 24rpx;
  color: #FF9900;
}
.container .content .body .context .item .item-info .item-row .item-tag.item-state {
  border: none;
  background-color: #009966;
  line-height: 40rpx;
  color: #ffffff;
}
.container .content .body .context .item .item-info .item-row .item-tag:last-child {
  margin: 0;
}
.container .content .body .context .item .item-type {
  position: absolute;
  top: 8rpx;
  left: -80rpx;
  z-index: 1;
  width: 200rpx;
  height: 30rpx;
  line-height: 30rpx;
  transform: rotate(-45deg);
  font-size: 16rpx;
  font-weight: bold;
  text-align: center;
  color: #ffffff;
}
.container .content .body .context .item .item-type .color1 {
  background-color: #FF6E0F;
}
.container .content .body .context .item .item-type .color2 {
  background-color: #FFDF05;
}
.container .content .body .context .item .item-type .color3 {
  background-color: #FFA403;
}
.container .content .body .context .item:after {
  content: '';
  width: 100%;
  display: block;
  position: absolute;
  z-index: 1;
  left: 0;
  bottom: 0;
  border-bottom: 0.5px solid #F0F0F0;
}

