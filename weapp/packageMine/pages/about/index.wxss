  position: relative;
  height: 300rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center center;
  background-image: url("http://sersms.com:7000/house/v1/file/static/userfile/202002/03/1224240266060644352.jpg");
}
