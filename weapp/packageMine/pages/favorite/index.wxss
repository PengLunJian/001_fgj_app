.container {
  min-height: 100vh;
}
.container .content {
  height: 100vh;
}
.container .content .header .tab-bar {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  position: fixed;
  top: 130rpx;
  left: 0;
  z-index: 1000;
  background-color: #ffffff;
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.03);
  font-size: 28rpx;
  text-align: center;
  color: #666666;
}
.container .content .header .tab-bar .tab-item {
  width: 33.333%;
  position: relative;
  padding: 20rpx 0;
}
.container .content .header .tab-bar .tab-item .tab-text {
  height: 40rpx;
  line-height: 40rpx;
  transition: all 300ms ease;
  border-right: 0.5px solid #DEDEDE;
}
.container .content .header .tab-bar .tab-item:after {
  content: '';
  width: 0px;
  display: block;
  position: absolute;
  left: 50%;
  bottom: 0;
  opacity: 0;
  visibility: hidden;
  transform: translateX(-50%);
  transition: all 300ms ease;
  border-top: 6rpx solid #FF9900;
}
.container .content .header .tab-bar .tab-item.active {
  color: #FF9900;
}
.container .content .header .tab-bar .tab-item.active:after {
  opacity: 1;
  visibility: visible;
  width: 120rpx;
}
.container .content .header .tab-bar .tab-item:last-child .tab-text {
  border: none;
}
.container .content .body {
  height: 100%;
}
.container .content .body .tab-swiper {
  height: 100%;
  position: relative;
}
.container .content .body .tab-swiper .context {
  height: 100%;
  padding-top: 210rpx;
}
.container .content .body .tab-swiper .context .scroll-view {
  height: 100%;
}

